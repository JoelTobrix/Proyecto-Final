<?php

namespace App\Http\Controllers;

use App\Models\Propiedad;
use Illuminate\Http\Request;

class PropiedadController extends Controller
{
    /**
     * Muestra una lista de propiedades disponibles y reservadas.
     *
     * @return \Illuminate\View\View
     */
    public function index()
    {
        // Obtiene todas las propiedades y las separa por su estado
        $propiedadesDisponibles = Propiedad::where('estado', 'disponible')->get();
        $propiedadesReservadas = Propiedad::where('estado', 'reservada')->get();
        
        // Pasa las dos listas a la vista
        return view('inmobiliaria', compact('propiedadesDisponibles', 'propiedadesReservadas'));
    }

    /**
     * Almacena una nueva propiedad en la base de datos.
     *
     * @param  \Illuminate\Http\Request  $request
     * @return \Illuminate\Http\RedirectResponse
     */
    public function store(Request $request)
    {
        // ValidaciÃ³n de los datos del formulario
        $request->validate([
            'titulo' => 'required|max:20',
            'ubicacion' => 'required|max:100',
            'precio' => 'required|numeric',
            'descripcion' => 'required|max:255',
            'imagen' => 'required|max:255',
            'estado' => 'required|max:20',
        ]);
    
        // Crear y guardar la propiedad
        Propiedad::create($request->all());
    
        // Redirige a la vista principal
        return redirect()->route('propiedades.index')->with('success', 'Propiedad creada correctamente.');
    }
}